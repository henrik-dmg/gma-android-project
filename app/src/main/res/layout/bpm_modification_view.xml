<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bpm_modification_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bpm_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:text="@string/bpm_label"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/large_bpm_decrement_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/metronome_decrement_large" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/small_bpm_decrement_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/metronome_decrement_small" />

    <TextView
        android:id="@+id/bpm_text_view"
        android:text="999"
        style="@style/counter_label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/small_bpm_increment_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/metronome_increment_small" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/large_bpm_increment_button"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/metronome_increment_large" />

</merge>