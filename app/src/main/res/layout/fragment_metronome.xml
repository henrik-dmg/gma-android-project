<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="htw.gma_sose22.metronomeui.metronome.MetronomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" >

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/metronomeBPMLabel"
                android:text="@string/title_metronome"
                android:textAlignment="center"
                android:inputType="number"
                android:autofillHints="Please enter a number between 40 and 200"
                android:minHeight="48dp" />

        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bpmSeekBar"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="10dp"/>

        <Button
                android:id="@+id/button_start_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/metronome_start_button_title"
                android:textAlignment="center"
                android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>