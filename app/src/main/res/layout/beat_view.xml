<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beat_view" >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/beat_buttons">

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="visible"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_1" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="visible"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_2" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="visible"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_3" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="visible"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_4" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_5" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_6" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_7" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_note_default"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/beat_button_8" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/note_control_stack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 xxx"
                android:id="@+id/note_count_label"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/decrement_notes_button"
                    android:text="@string/decrement_button_title" />

            <Button
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/increment_notes_button"
                    android:text="@string/increment_button_title" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>